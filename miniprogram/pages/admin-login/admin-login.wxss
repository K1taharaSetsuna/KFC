page {
  background-color: #f5f5f5;
}
.container {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login-box {
  width: 80%;
  background: #fff;
  padding: 60rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  color: #333;
}
.input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 44rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  font-size: 28rpx;
}
.login-btn {
  width: 100%;
  background: #d62f35;
  color: #fff;
  border-radius: 44rpx;
  font-weight: normal;
}